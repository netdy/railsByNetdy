<body>
  <div class="form-container" style="max-width: 400px">
    <h1>Login</h1>
    
    <%= form_with(url: login_path, method: :post, local: true) do |form| %>

    
    <div class="form-group">
      <%= form.label :Email, "Email" %>
      <%= form.email_field :Email, name: 'login[Email]', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :PhoneNumber, "Password" %>
      <%= form.password_field :PhoneNumber, name: 'login[PhoneNumber]', required: true  %>
    </div>

    <div class="form-group full-width">
      <%= form.submit "Login" %>
    </div>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

</body>

