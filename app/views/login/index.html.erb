<body>
  <div class="form-container" style="max-width: 400px">
    <h1>Login</h1>
    
    <%= form_with(url: login_path, method: :post, remote: true) do |form| %>

    
    <div class="form-group">
      <%= form.label :Email, "Email" %>
      <%= form.email_field :Email, name: 'login[Email]', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :PhoneNumber, "Password" %>
      <%= form.password_field :PhoneNumber, name: 'login[PhoneNumber]', required: true  %>
    </div>

    <div class="form-group full-width">
      <%= form.submit "Login" %>
    </div>
    <p style="color:#545454">If you don't have an account, <a href="/registration" style="color : red; "> register here. </a></p>

<% end %>
    <turbo-frame id="error-messages">
    </turbo-frame>
  </div>
  
</body>

