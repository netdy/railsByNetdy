<h1>Registration Form</h1>

<%= form_with(model: @user_info, url: registration_path , method: :post, local: true) do |form| %>
  <div>
    <%= form.label :FirstName, "First Name" %>
    <%= form.text_field :FirstName %>
  </div>

  <div>
    <%= form.label :LastName, "Last Name" %>
    <%= form.text_field :LastName %>
  </div>

   <div>
    <%= form.label :DateOfBirth %>
    <%= form.date_field :DateOfBirth %>
  </div>

  <div>
    <%= form.label :Gender, "Gender" %>
    <div>
        <%= form.radio_button :Gender, 'ชาย' %>
        <%= form.label :Genderชาย, 'ชาย' %>
        <%= form.radio_button :Gender, 'หญิง' %>
        <%= form.label :Genderหญิง, 'หญิง' %>
    </div>  
  </div>

  <div>
    <%= form.label :Email %>
    <%= form.email_field :Email %>
  </div>

  <div>
    <%= form.label :PhoneNumber, "Phone Number" %>
    <%= form.telephone_field :PhoneNumber %>
  </div>

  <div>
    <%= form.label :Subject, "Subject" %>
    <%= form.select :Subject, options_for_select(['Front-end', 'Back-end', 'Database']) %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>
