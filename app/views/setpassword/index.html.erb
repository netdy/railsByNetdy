<body>
  <div class="form-container" style="max-width: 400px">
    <p style="color:#545454"><a href="/login" style="color : red; ">  &#60; Back  </a></p>
    <h1>Set Password</h1>
    
    <%= form_with(url: setpassword_path, method: :post, remote: true) do |form| %>
    
    <div class="form-group">
      <%= form.label :Password, "Set Password" %>
      <%= form.password_field  :Email, name: 'setpassword[password]', required: true , minlength:1, maxlength: 30%>
    </div>

    <div class="form-group">
      <%= form.label :PhoneNumber, "Comfirm Password" %>
      <%= form.password_field :PhoneNumber, name: 'setpassword[password_confirm]', required: true ,minlength: 1 , maxlength: 30  %>
    </div>

    <div class="form-group full-width">
      <%= form.submit "Submit" %>
    </div>

<% end %>
 <turbo-frame id="error-messages">
    </turbo-frame>

  </div>
</body>

