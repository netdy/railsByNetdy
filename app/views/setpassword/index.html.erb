<body>
  <div class="form-container" style="max-width: 400px">
    <h1>Set Password</h1>
    
    <%= form_with(url: setpassword_path, method: :post, remote: true) do |form| %>
    
    <div class="form-group">
      <%= form.label :Password, "Set Password" %>
      <%= form.text_field :Email, name: 'setpassword[password]', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :PhoneNumber, "Comfirm Password" %>
      <%= form.text_field :PhoneNumber, name: 'setpassword[password_confirm]', required: true  %>
    </div>

    <div class="form-group full-width">
      <%= form.submit "Submit" %>
    </div>

<% end %>
  </div>
</body>

